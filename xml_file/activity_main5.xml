<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:layout_gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/nameproduct"
        android:layout_width="413dp"
        android:layout_height="46dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop= "440dp"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/ProductName"
        android:textColor="@color/black"
        android:textSize="65px" />

    <ImageView
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="480dp"
        android:background="@drawable/rating" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="490dp"
        android:layout_height="72dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="520dp"
        android:textSize="41px"
        android:fontFamily="@font/poppins"
        android:text="@string/Desc"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/spec"
        android:layout_width="138dp"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="160dp"
        android:layout_alignParentBottom="true"
        android:textSize="45px"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/Spec"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/reviewtxt"
        android:layout_width="138dp"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="120dp"
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/Reviews"
        android:textColor="@color/black"
        android:textSize="45px" />

    <ImageView
        android:id="@+id/rightbutton"
        android:layout_width="30dp"
        android:layout_height="32dp"
        android:layout_marginLeft="340dp"
        android:layout_marginBottom="160dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rigntbuttonblack" />

    <ImageView
        android:id="@+id/rightbutton2"
        android:layout_width="30dp"
        android:layout_height="32dp"
        android:layout_marginLeft="340dp"
        android:layout_marginBottom="120dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rigntbuttonblack" />

    <ImageView
        android:id="@+id/red"
        android:layout_width="209dp"
        android:layout_height="50dp"
        android:layout_marginLeft="160dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/redshape" />

    <TextView
        android:id="@+id/buttxt"
        android:layout_width="70dp"
        android:layout_height="24dp"
        android:layout_marginLeft="235dp"
        android:layout_marginBottom="25dp"
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/poppins"
        android:textSize="42px"
        android:text="@string/Buy"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:textSize="45px"
        android:layout_marginBottom="25dp"
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/Price"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/estimate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginTop="140dp"
        android:text="@string/Estimate"
        android:textColor="@color/Grey"
        android:textSize="40px" />



    <ImageView
        android:id="@+id/etalase"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/product" />

    <LinearLayout
        android:id="@+id/back_ic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="16dp">

    <ImageView
        android:id="@+id/rightbutton1"
        android:layout_width="52dp"
        android:layout_height="51dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/backbuttonblack" />

    </LinearLayout>

    <ImageView
        android:id="@+id/fav_icon"
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/favicon" />


</RelativeLayout>